pkgname=ea-server-vmhost-meta
pkgver=0.0.3
pkgrel=1
pkgdesc="Common packages for server computers which will host VMs."
arch=('x86_64')
depends=()
install=$pkgname.install

package() {
	depends+=('ea-server-meta')

	depends+=('libvirt' 'qemu' 'dmidecode' 'virtio-win' 'scream-git' 'vlmcsd-git' 'gettext' 'edk2-ovmf')
}
