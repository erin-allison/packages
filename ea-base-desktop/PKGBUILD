pkgname=ea-base-desktop
pkgver=0.0.4
pkgrel=2
pkgdesc="Minimal package set to define a basic Arch Linux installation with a desktop environment"
arch=('x86_64')
depends=()

package() {
	depends+=('ea-base')

	depends+=('plasma-meta' 'plasma-wayland-session' 'firefox' 'kate' 'konsole' 'dolphin-plugins' 'spectacle' 'noto-fonts-emoji' 'nerd-fonts-hack')

	depends+=('systemd-dbus-ssh-agent')

	depends+=('spotify-tui-bin' 'spotifyd')

	depends+=('remmina' 'freerdp')

	depends+=('keybase' 'kbfs' 'gtk2' 'nextcloud-client')

	depends+=('slack-desktop' 'discord')

	depends+=('keepassxc')

	depends+=('samba' 'cups' 'brother-mfc-7860dw')

	depends+=('virt-manager')
}
