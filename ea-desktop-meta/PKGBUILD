pkgname=ea-desktop-meta
pkgver=0.0.3
pkgrel=1
pkgdesc="Common packages for desktop cmoputers."
arch=('x86_64')
depends=()
install=$pkgname.install

package() {
	depends+=('ea-common-meta')

	depends+=('systemd-dbus-ssh-agent')

	depends+=('spotify-tui' 'spotifyd')

	depends+=('remmina-git' 'freerdp')

	depends+=('keybase' 'kbfs' 'nextcloud-client')

	depends+=('slack-desktop' 'discord_arch_electron')

	depends+=('keepassxc')

	depends+=('samba' 'cups')
}
